{
  "manifest_version": 3,
  "name": "Skynet Command",
  "version": "1.0.0",
  "description": "LCARS command centre for Skynet operations. Dynamic panel protocol â€” apps self-register their UI.",
  "permissions": [
    "sidePanel",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "http://10.10.10.123:*/*",
    "http://127.0.0.1:*/*"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel/panel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src http://localhost:* http://10.10.10.123:* http://127.0.0.1:*"
  }
}
