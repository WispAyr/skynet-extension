# Skynet Extension Configuration
# Copy to .env and customize

# Primary gateway URL (local network)
GATEWAY_URL_PRIMARY=ws://10.10.10.123:3210/extension

# Fallback gateway URL (ZeroTier)
GATEWAY_URL_FALLBACK=ws://192.168.195.33:3210/extension

# Reconnect delay in milliseconds
RECONNECT_DELAY=5000

# Heartbeat interval in milliseconds
HEARTBEAT_INTERVAL=30000

# Connection timeout in milliseconds
CONNECTION_TIMEOUT=5000

# Note: Auth token is auto-generated and stored in chrome.storage.sync
# The token is a 64-character hex string generated using crypto.getRandomValues()
